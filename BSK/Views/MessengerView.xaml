<UserControl x:Class="BSK.Views.MessengerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BSK.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox x:Name="Messages" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="34,21,34,168" IsReadOnly="True"></TextBox>
        <TextBox x:Name="MessageInput" Margin="144,299,238,67"></TextBox>
        <Button x:Name="SendButton" Content="Send" Margin="401,299,140,67" Click="SendButtonClick"/>
        <RadioButton x:Name="cbcMode" GroupName="Mode" Margin="506,299,-79,-135" IsChecked="True">CBC</RadioButton>
        <RadioButton x:Name="ecbMode" GroupName="Mode" Margin="506,329,-90,-127">ECB</RadioButton>
    </Grid>
</UserControl>
